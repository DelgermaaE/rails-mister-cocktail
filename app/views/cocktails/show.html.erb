<h1><%= @cocktail.name %></h1>
<% @cocktail.doses.each do |dose|%>
<h3> <%= dose.description %> </h3>
<h3> <%= dose.ingredient.name %></h3>
<% end %>

<div class="card"
  style="height: 300px; width: 400px; background: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path @cocktail.photo, height: 300, width: 400, crop: :fill %>')">
  <div class="card-category"></div>
  <div class="card-description">
  </div>
  <a class="card-link" href="#" ></a>
</div>


<%= link_to "add a dose!", new_cocktail_dose_path(@cocktail) %>
<%= link_to 'delete', cocktail_path(@cocktail), method: :delete %>
